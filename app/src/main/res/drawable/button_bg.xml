            </item>
        </ripple>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/default_text_color" />
            <corners android:radius="12dp" />
            <padding android:bottom="16dp" android:top="16dp" />
        </shape>
    </item>
</selector>